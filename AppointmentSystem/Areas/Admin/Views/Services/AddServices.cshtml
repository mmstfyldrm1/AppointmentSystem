
@{
    ViewData["Title"] = "AddServices";
    Layout = "~/Areas/Admin/Views/Shared/_AppointmentSystemAdminLayout.cshtml";
}

@model AdminPanelAddServicesDto

<<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Servis Ekleme</h6>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="ServiceName" class="form-label">Hizmet İsmi</label>
            <input type="" asp-for="ServiceName" class="form-control" />
            <div class="form-text">
               
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Explanation" class="form-label">Açıklama</label>
            <input type="text" asp-for="Explanation" class="form-control" />
            <div class="form-text">
               
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Fiyat</label>
            <input type="number" asp-for="Price" class="form-control" />
            <div class="form-text">
               
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="ServicesType" class="form-label">İşletme</label>
            <input class="form-control form-control-lg" asp-for="ServicesType" type="text" />
        </div>
        <select name="ShopId" asp-items="ViewBag.Shops" class="form-control">
            <option value="">İşletme Seçiniz</option>
        </select>
        <hr />
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>

