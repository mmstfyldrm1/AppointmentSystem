@using System.Security.Claims

<div class="sidebar pe-4 pb-3">
    <nav class="navbar bg-light navbar-light">
        <a href="index.html" class="navbar-brand mx-4 mb-3">
            <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>ADMİN PANEL</h3>
        </a>
        <div class="d-flex align-items-center ms-4 mb-4">
            <div class="position-relative">
                <img class="rounded-circle" src="~/Traversal-Liberty/assets/images/c1.jpg" alt="" style="width: 40px; height: 40px;">
                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
            </div>
            <div class="ms-3">
                <h6 class="mb-0"><a href="~/Admin/ShopOwners/UpdateShopOwners"></a> @User.FindFirst("FullName")?.Value</h6>
                <span>@User.FindFirst(ClaimTypes.Role)?.Value</span>
            </div>
        </div>
        <div class="navbar-nav w-100">
            <a href="~/Admin/Dashboard/Index" class="nav-item nav-link "><i class="fa fa-tachometer-alt me-2"></i>Genel</a>

            <a href="~/Admin/AppointmentApproved/ApprovedAppointment" class="nav-item nav-link "><i class="fa fa-tachometer-alt me-2"></i>Randevu Onayla</a>

            <a href="~/Admin/Appointment/AppointmentList" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Randevular</a>

            @if (User.IsInRole("SHOPOWNERS") || User.IsInRole("ADMIN"))
            {
                <a href="~/Admin/Shop/ShopList" class="nav-item nav-link"><i class="fa fa-th me-2"></i>İşletme Listesi</a>
                <a href="~/Admin/Worker/WorkerList" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Çalışan Listesi</a>
            }

            @if (User.IsInRole("SHOPOWNERS") || User.IsInRole("ADMIN") || User.IsInRole("WORKER"))
            {
                <a href="~/Admin/Services/ServicesList" class="nav-item nav-link"><i class="fa fa-table me-2"></i>Hizmetler</a>
            }
            <a href="chart.html" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Charts</a>


            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Genel Bilgiler</a>
                <div class="dropdown-menu bg-transparent border-0">
                    @if (User.IsInRole("SHOPOWNERS") || User.IsInRole("ADMIN"))
                    {
                        <a href="~/Admin/ShopOwners/AddShopOwners" class="dropdown-item">İşletme Sahibi Bilg.</a>
                    }
                    @if (User.IsInRole("WORKER") || User.IsInRole("ADMIN"))
                    {
                        <a href="~/Admin/Worker/UpdateWorker" class="dropdown-item"> Bilgilerimi Güncelle </a>
                    }

                    @if (User.IsInRole("SHOPOWNERS") || User.IsInRole("ADMIN"))
                    {
                        <a href="~/Admin/ShopOwners/UpdateShopOwners" class="dropdown-item"> Bilgilerimi Güncelle </a>
                    }

                    <a href="404.html" class="dropdown-item">404 Error</a>
                    <a href="blank.html" class="dropdown-item">Blank Page</a>
                </div>
            </div>

        </div>
    </nav>
</div>