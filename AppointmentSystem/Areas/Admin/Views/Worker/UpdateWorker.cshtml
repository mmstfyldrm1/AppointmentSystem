
@{
    ViewData["Title"] = "UpdateWorker";
    Layout = "~/Areas/Admin/Views/Shared/_AppointmentSystemAdminLayout.cshtml";
}
@model UpdateWorkerDto

<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Bilgileri Güncelle</h6>
    <form method="post" asp-action="UpdateWorker" class="p-5 shadow-lg rounded-4 bg-white border">
        <input type="hidden" name="_method" value="PUT" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Çalışan İsim</label>
            <input type="text" asp-for="Name" class="form-control" />
            <div class="form-text">
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="WorkerPhone" class="form-label">Telefon </label>
            <input class="form-control form-control-lg" asp-for="WorkerPhone" type="text" />
        </div>

        <div class="mb-3">
            <label asp-for="Image" class="form-label">Resim Seçiniz</label>
            <input class="form-control form-control-lg" asp-for="Image" type="file" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary"> Kaydet </button>
    </form>
    <br />

</div>



