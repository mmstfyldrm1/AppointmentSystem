@using EntityLayer.Concrete
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@model CreateAppointmentDto

@{
    ViewData["Title"] = "AddAppointment";
    Layout = "~/Views/Shared/_AppointmentSystemLayout.cshtml";


}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<section class="w3l-contact py-5" id="contact">
    <div class="container py-lg-4">
        <div class="row justify-content-center">
            <div class="col-lg-7">

                <!-- Başlık -->
                <div class="text-center mb-5">
                    <h2 class="fw-bold mb-2">Yeni Randevu Oluştur</h2>
                    <p class="text-muted">Aşağıdaki bilgileri kontrol ederek randevunuzu oluşturabilirsiniz.</p>
                    <div style="width:90px; height:4px; background:#0d6efd; margin:12px auto; border-radius:10px;"></div>
                </div>

                <!-- Form -->
                <form method="post" class="p-4 shadow-lg rounded-4 bg-white border">

                    <div class="row g-4">

                        <!-- Hidden Inputs -->
                        <input type="hidden" asp-for="WorkerId" value="@ViewBag.WorkerId" />
                        <input type="hidden" asp-for="ShopId" value="@ViewBag.ShopId" />
                        <input type="hidden" asp-for="TimeSlotId" value="@ViewBag.TimeSlotId" />
                        <input type="hidden" asp-for="AppointmentDate" value="@ViewBag.Date" />

                        <!-- Ad Soyad -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">Ad Soyad</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="bi bi-person-fill"></i>
                                </span>
                                <input type="text"
                                       asp-for="UserName"
                                       class="form-control rounded-end-3"
                                       value="@User.FindFirst("FullName")?.Value"
                                       readonly />
                            </div>
                        </div>

                        <!-- Çalışan -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">Çalışan</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-success text-white">
                                    <i class="bi bi-scissors"></i>
                                </span>
                                <input type="text"
                                       asp-for="WorkerName"
                                       value="@ViewBag.WorkerName"
                                       class="form-control rounded-end-3"
                                       readonly />
                            </div>
                        </div>

                        <!-- İşletme -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">İşletme</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-dark text-white">
                                    <i class="bi bi-building"></i>
                                </span>
                                <input type="text"
                                       asp-for="ShopName"
                                       value="@ViewBag.ShopName"
                                       class="form-control rounded-end-3"
                                       readonly />
                            </div>
                        </div>

                        <!-- Saat -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">Saat</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-warning text-white">
                                    <i class="bi bi-clock-fill"></i>
                                </span>
                                <input type="text"
                                       asp-for="TimeSlot"
                                       value="@ViewBag.Time"
                                       class="form-control rounded-end-3"
                                       readonly />
                            </div>
                        </div>

                        <!-- Telefon -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">Telefon</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-info text-white">
                                    <i class="bi bi-telephone-fill"></i>
                                </span>
                                <input type="text"
                                       asp-for="UserPhone"
                                       class="form-control rounded-end-3"
                                       placeholder="Telefon numaranız"
                                       required />
                            </div>
                        </div>

                        <!-- Hizmet -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">Hizmet</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-secondary text-white">
                                    <i class="bi bi-stars"></i>
                                </span>
                                <select name="ServicesId"
                                        asp-items="ViewBag.Services"
                                        class="form-select rounded-end-3"
                                        required>
                                    <option value="">Hizmet Seçiniz</option>
                                </select>
                            </div>
                        </div>

                        <!-- Açıklama -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">Açıklama</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-danger text-white align-items-start pt-3">
                                    <i class="bi bi-chat-dots-fill"></i>
                                </span>
                                <textarea asp-for="Explanation"
                                          class="form-control rounded-end-3"
                                          rows="4"
                                          placeholder="Açıklama giriniz..."
                                          required></textarea>
                            </div>
                        </div>

                    </div>

                    <!-- Button -->
                    <div class="text-center mt-4">
                        <button class="btn btn-primary btn-lg px-5 py-2 rounded-3 shadow">
                            <i class="bi bi-calendar-check-fill me-2"></i> Randevu Oluştur
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>










