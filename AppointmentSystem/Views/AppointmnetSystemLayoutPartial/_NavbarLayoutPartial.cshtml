@using System.Security.Claims
<header id="site-header" class="fixed-top">
    <div class="container">
        <nav class="navbar navbar-expand-lg stroke">
            <h1>
                <a class="navbar-brand mr-lg-5" href="index.html">
                    StyleUp
                </a>
            </h1>
            <!-- if logo is image enable this
            <a class="navbar-brand" href="#index.html">
                <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
            </a> -->


            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/AppointmentSystem/Index">Ana Sayfa <span class="sr-only">(current)</span></a>
                    </li>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item ">
                            <a class="nav-link" href="/AppointmentSystem/MyActiveAppointment">Aktif Randevularım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/AppointmentSystem/WorkerActiveAppointmentList">Berberimin randevuları</a>
                        </li>

                    }

                    @if (User.IsInRole("WORKER") || User.IsInRole("SHOPOWNERS") || User.IsInRole("Admin"))
                    {

                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/Dashboard/Index">Admin Panel</a>
                        </li>
                    }


                    @if (User.IsInRole("MEMBER"))
                    {

                        <li class="nav-item">
                            <a class="nav-link" href="#">Bizimle Çalışmak İstermisiniz</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="~/Profile/Index">@User.FindFirst("FullName")?.Value</a>
                    </li>

                </ul>
            </div>

            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="d-lg-block d-none">
                    <a href="/auth/logout" class="btn btn-style btn-secondary">Çıkış Yap</a>
                </div>
            }
            @if (User.Identity == null || !User.Identity.IsAuthenticated)
            {
                <div class="d-lg-block d-none">
                    <a href="/auth/login" class="btn btn-style btn-secondary">Giriş Yap</a>
                </div>
            }

            <!-- toggle switch for light and dark theme -->
            <div class="mobile-position">
                <nav class="navigation">
                    <div class="theme-switch-wrapper">
                        <label class="theme-switch" for="checkbox">
                            <input type="checkbox" id="checkbox">
                            <div class="mode-container">
                                <i class="gg-sun"></i>
                                <i class="gg-moon"></i>
                            </div>
                        </label>
                    </div>
                </nav>
            </div>
            <!-- //toggle switch for light and dark theme -->
        </nav>
    </div>
</header>