@model List<AppointmentStatictisDto>
<section class="w3l-stats py-5" id="stats">
    <div class="gallery-inner container py-lg-0 py-3">
        <div class="row stats-con pb-lg-3">
            @foreach(var item in Model){
                <div class="col-lg-3 col-6 stats_info counter_grid">
                <p class="counter">@item.Shop</p>
                <h4>İşletme</h4>
            </div>
                <div class="col-lg-3 col-6 stats_info counter_grid">
                    <p class="counter">@item.Worker</p>
                    <h4>Çalışan</h4>
                </div>

                <div class="col-lg-3 col-6 stats_info counter_grid">
                    <p class="counter">@item.Users</p>
                    <h4>Mutlu Müşteri</h4>
                </div>
                <div class="col-lg-3 col-6 stats_info counter_grid">
                    <p class="counter">@item.Appointment</p>
                    <h4>Randevu</h4>
                </div>
            
            
            }

        </div>
    </div>
</section>