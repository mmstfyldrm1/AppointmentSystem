@model List<AppointmentTop10ShopDto>

<style>
    .shop-card {
        border-radius: 12px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform .25s ease, box-shadow .25s ease;
        margin-bottom: 25px;
    }

    .shop-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .shop-img-wrapper {
        height: 160px;
        border-radius: 12px;
        overflow: hidden;
    }

    .shop-img-wrapper img {
        width: 100%;
        height: 160px;
        object-fit: cover;
        transition: transform .3s ease;
    }

    .shop-card:hover .shop-img-wrapper img {
        transform: scale(1.05);
    }

    .shop-info h4 {
        font-size: 22px;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .shop-info p {
        margin-bottom: 6px;
        font-size: 14px;
        color: #555;
    }

    .shop-owner {
        font-weight: 600;
        color: #2a5dff;
        margin-bottom: 10px;
    }

    .shop-wrapper {
        padding: 18px 20px;
    }
</style>


<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Visit</h6>
            <h3 class="hny-title">Popular Destinations</h3>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-6 col-sm-12">

                    <a href="/AppointmentSystem/AddAppointment" class="text-decoration-none text-dark">
                        <div class="shop-card">

                            <div class="shop-img-wrapper">
                                <img src="~/assets/images/@item.ShopImg" alt="@item.Name" />
                            </div>

                            <div class="shop-wrapper">
                                <div class="shop-info">
                                    <h4>@item.Name</h4>
                                    <p class="shop-owner">@item.ShopOwnerName</p>
                                    <p><i class="fa fa-phone"></i> @item.ShopPhone</p>
                                    <p><i class="fa fa-map-marker"></i> @item.ShopAddress</p>
                                </div>
                            </div>

                        </div>
                    </a>

                </div>
            }
        </div>
    </div>
</section>

